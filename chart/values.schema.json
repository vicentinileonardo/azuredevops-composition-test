{
  "type": "object",
  "$schema": "http://json-schema.org/draft-07/schema",
  "required": [
    "azureDevOps",
    "teamProject",
    "environment",
    "gitRepository"
  ],
  "properties": {
    "azureDevOps": {
      "type": "object",
      "description": "Azure DevOps Configuration",
      "required": [
        "organization"
      ],
      "properties": {
        "organization": {
          "type": [
            "string"
          ],
          "title": "Replace with your Azure DevOps organization name",
          "default": "\"krateo-kog\""
        }
      }
    },
    "teamProject": {
      "type": "object",
      "description": "Team Project Configuration",
      "required": [
        "name",
        "description",
        "visibility",
        "sourceControlType",
        "templateTypeId"
      ],
      "properties": {
        "verbose": {
          "type": [
            "boolean"
          ],
          "title": "Enable verbose logging",
          "description": "Team Project Configuration",
          "default": "true"
        },
        "name": {
          "type": [
            "string"
          ],
          "title": "Name of the Azure DevOps Team Project",
          "default": "\"krateo-project-from-composition\""
        },
        "description": {
          "type": [
            "string"
          ],
          "title": "Description for the Azure DevOps Team Project",
          "default": "\"Created by Krateo Composition\""
        },
        "visibility": {
          "type": [
            "string"
          ],
          "title": "Visibility of the Azure DevOps Team Project",
          "default": "private"
        },
        "sourceControlType": {
          "type": [
            "string"
          ],
          "title": "Source control type for the Azure DevOps Team Project",
          "default": "\"Git\""
        },
        "templateTypeId": {
          "type": [
            "string"
          ],
          "title": "Template type ID for the Azure DevOps Team Project",
          "default": "6b724908-ef14-45cf-84f8-768b5384da45"
        }
      }
    },
    "environment": {
      "type": "object",
      "description": "Environment Configuration",
      "required": [
        "name",
        "description"
      ],
      "properties": {
        "verbose": {
          "type": [
            "boolean"
          ],
          "title": "Enable verbose logging",
          "description": "Environment Configuration",
          "default": "true"
        },
        "name": {
          "type": [
            "string"
          ],
          "title": "Name of the Azure DevOps Environment",
          "default": "\"krateo-env-from-composition\""
        },
        "description": {
          "type": [
            "string"
          ],
          "title": "Description for the Azure DevOps Environment",
          "default": "\"Created by Krateo Composition\""
        }
      }
    },
    "gitRepository": {
      "type": "object",
      "description": "Git Repository Configuration",
      "required": [
        "name",
        "apiVersion"
      ],
      "properties": {
        "verbose": {
          "type": [
            "boolean"
          ],
          "title": "Enable verbose logging",
          "description": "Git Repository Configuration",
          "default": "true"
        },
        "name": {
          "type": [
            "string"
          ],
          "title": "Name of the Azure DevOps Git Repository",
          "default": "\"krateo-repo-from-composition\""
        },
        "apiVersion": {
          "type": [
            "string"
          ],
          "title": "Version of the API to use",
          "default": "\"7.2-preview.2\""
        },
        "initialize": {
          "type": [
            "boolean"
          ],
          "title": "Whether to initialize the repository",
          "default": "true"
        },
        "defaultBranch": {
          "type": [
            "string"
          ],
          "title": "Default branch for the Git Repository",
          "default": "\"refs/heads/main\""
        }
      }
    }
  }
}